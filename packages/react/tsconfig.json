{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "noEmit": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@nelson-ui/core": [
        "../core/src"
      ],
      "@nelson-ui/core/*": [
        "../core/src/*"
      ],
      "@nelson-ui/theme": [
        "../theme/src"
      ]
    }
  },
  "references": [
    {
      "path": "../theme/tsconfig.json"
    },
    {
      "path": "../core/tsconfig.json"
    }
  ],
  "include": [
    "src/**/*.ts",
    "tests/**/*"
  ]
}
