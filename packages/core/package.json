{
  "name": "@nelson-ui/core",
  "version": "0.0.5",
  "private": false,
  "scripts": {
    "build": "shx rm -rf ./dist && bob-esbuild tsc && bob-esbuild build",
    "typecheck": "tsc --noEmit --target esnext",
    "dev:publish": "yalc publish --push",
    "lint": "pnpm lint:eslint && pnpm lint:prettier",
    "lint:eslint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "lint:prettier": "prettier --check \"src/**/*.{ts,tsx}\" *.js",
    "lint:prettier:fix": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "main": "./dist/index.mjs",
      "module": "./dist/index.mjs",
      "import": "./dist/index.mjs"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "require": "./dist/*.js",
      "main": "./dist/*.js",
      "module": "./dist/*.mjs",
      "import": "./dist/*.mjs"
    }
  },
  "sideEffects": [
    "*.css.ts"
  ],
  "dependencies": {
    "@nelson-ui/theme": "0.1.2",
    "@vanilla-extract/css": "1.6.0",
    "@vanilla-extract/private": "^1.0.1",
    "@vanilla-extract/sprinkles": "1.3.0"
  },
  "prettier": "@stacks/prettier-config",
  "devDependencies": {
    "@stacks/prettier-config": "0.0.8",
    "@types/node": "16.9.6",
    "@types/tinycolor2": "1.4.3",
    "prettier": "2.4.1",
    "tinycolor2": "1.4.2",
    "ts-eager": "2.0.2",
    "typescript": "4.4.3"
  }
}
