{
  "name": "nelson-ui-monorepo",
  "version": "0.0.0",
  "scripts": {
    "lint": "pnpm lint -r",
    "build": "pnpm build -r",
    "postbuild": "shx rm -rf ./dist",
    "dev:build": "pnpm build && pnpm dev:publish",
    "dev:publish": "pnpm -r dev:publish",
    "ci:publish": "pnpm build && pnpm publish -r --no-git-checks --access public",
    "ci:version": "pnpm changeset version && pnpm install --no-frozen-lockfile && git add .",
    "ci:generate": "ultra -r --filter \"@nelson-ui/theme\" generate && git add ."
  },
  "private": true,
  "prettier": "@stacks/prettier-config",
  "devDependencies": {
    "@changesets/changelog-github": "0.4.1",
    "@changesets/cli": "2.17.0",
    "@rollup/plugin-typescript": "8.2.5",
    "@stacks/eslint-config": "^1.0.9",
    "@stacks/prettier-config": "^0.0.8",
    "esbuild": "0.13.2",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jest": "24.4.2",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.26.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "prettier": "2.4.1",
    "rollup": "2.57.0",
    "rollup-plugin-typescript2": "0.30.0",
    "shx": "0.3.3",
    "tslib": "^2.3.1",
    "typescript": "4.4.3"
  },
  "dependencies": {
    "bob-esbuild": "^2.0.0",
    "bob-esbuild-cli": "^2.0.0"
  }
}
